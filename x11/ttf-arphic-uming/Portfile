PortSystem 1.0

name            ttf-arphic-uming
version         0.2.20080216.1
categories      x11 fonts
maintainers     magma.ca:oksmith openmaintainer
description     AR PL ShanHeiSun Uni and AR PL ShanHeiSun Uni MBE Unicode Fonts
long_description \
                AR PL ShanHeiSun Uni and AR PL ShanHeiSun Uni MBE Unicode Fonts \
                are provided by Arphic Technology to the Free Software \
                community under the Arphic Public License.
platforms       darwin
homepage        https://www.freedesktop.org/wiki/Software/CJKUnifonts
master_sites    https://ftp.gnome.org/mirror/cdimage/snapshot/Debian/pool/main/t/${name}
distfiles       ${name}_${version}.orig.tar.gz
checksums       rmd160  242f9a1ef2671c222401d4374b6a792327329aeb \
                sha256  8038a6db9e832456d5da5559aff8d15130243be1091bf24f3243503a6f1bda98 \
                size    10684442

depends_run     port:fontconfig

use_configure   no
supported_archs noarch
build       {}
destroot {
    set fontdir ${destroot}${prefix}/share/fonts/${name}
    xinstall -d -m 755 ${fontdir}
    xinstall -m 644 ${workpath}/uming.ttc ${fontdir}
}

post-activate {
    system "${prefix}/bin/fc-cache -v ${prefix}/share/fonts"
}
post-deactivate {
    system "${prefix}/bin/fc-cache -v ${prefix}/share/fonts"
}
